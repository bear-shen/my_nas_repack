{
  "compilerOptions": {
	"module"            : "commonjs",
	"noImplicitAny"     : true,
	"removeComments"    : true,
	"preserveConstEnums": true,
	"sourceMap"         : true,
	"outDir"            : "dst/"
  },
  "include"        : [
	"src/*",
	"src/**/*"
  ],
  "exclude"        : [
	"node_modules",
	"**/*.spec.ts"
  ]
}